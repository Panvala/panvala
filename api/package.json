{
  "name": "panvala-api",
  "version": "0.0.1",
  "engines": {
    "node": ">= 10.0.0",
    "npm": ">= 6.0.0"
  },
  "description": "Panvala API service",
  "main": "index.js",
  "scripts": {
    "dev": "PORT=5001 nodemon index.js",
    "start": "node index.js",
    "migrate": "sequelize db:migrate",
    "migrate:undo": "sequelize db:migrate:undo",
    "create-migration": "sequelize migration:generate --name",
    "test": "jest --passWithNoTests"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "ajv": "^6.10.0",
    "bluebird": "^3.5.5",
    "cors": "^2.8.5",
    "eth-events": "^0.7.0",
    "ethers": "^4.0.26",
    "express": "^4.16.4",
    "express-validator": "^5.3.1",
    "ipfs-http-client": "32.0.1",
    "lodash": "4.17.14",
    "morgan": "^1.9.1",
    "pg": "^7.8.0",
    "pg-hstore": "^2.3.2",
    "sequelize": "5.8.6",
    "sequelize-cli": "^5.4.0"
  },
  "devDependencies": {
    "husky": "^2.4.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.2.0",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "readline": "^1.3.0",
    "sqlite3": "^4.0.6",
    "supertest": "^4.0.2",
    "umzug": "^2.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,md}": [
      "prettier --write --config ./.prettierrc",
      "git add"
    ]
  }
}
