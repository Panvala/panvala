{
  "name": "panvala-api",
  "version": "0.0.1",
  "engines": {
    "node": ">= 10.0.0",
    "npm": ">= 6.0.0"
  },
  "description": "Panvala API service",
  "main": "index.js",
  "scripts": {
    "build": "gulp",
    "clean": "rm -rf ./dist/*",
    "dev": "yarn build && PORT=5001 nodemon dist/index.js",
    "start": "node dist/index.js",
    "nukedb": "ts-node scripts/nukedb.ts",
    "reveal": "ts-node scripts/reveal.ts",
    "finalize": "ts-node scripts/finalize.ts",
    "migrate": "sequelize db:migrate",
    "migrate:undo": "sequelize db:migrate:undo",
    "create-migration": "sequelize migration:generate --name",
    "seed": "sequelize db:seed:all",
    "poll:create": "ts-node scripts/createPoll.ts",
    "poll:tally": "ts-node scripts/tally-poll.ts",
    "sync-events": "ts-node scripts/sync-contract-events.ts",
    "test": "jest",
    "update:contract-types": "typechain --target=ethers --outDir ./types '../packages/panvala-utils/abis/**/*.json'"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "ajv": "^6.10.0",
    "axios": "^0.19.0",
    "bluebird": "^3.5.5",
    "cors": "^2.8.5",
    "eth-events": "^0.9.2",
    "ethers": "^4.0.26",
    "express": "^4.16.4",
    "express-validator": "^6.2.0",
    "ipfs-http-client": "32.0.1",
    "lodash": "4.17.14",
    "morgan": "^1.9.1",
    "panvala-utils": "file:../packages/panvala-utils",
    "pg": "^7.8.0",
    "pg-hstore": "^2.3.2",
    "sequelize": "5.21.2",
    "sequelize-cli": "^5.4.0",
    "yargs": "^15.0.2"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.27",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.18",
    "@types/morgan": "^1.7.37",
    "@types/node": "^12.12.4",
    "@types/sequelize": "^4.28.6",
    "@types/supertest": "^2.0.8",
    "@types/umzug": "^2.2.2",
    "gulp": "^4.0.2",
    "gulp-typescript": "^5.0.1",
    "husky": "^2.4.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.2.0",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "sqlite3": "^4.0.6",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "typechain": "^1.0.3",
    "typechain-target-ethers": "^1.0.3",
    "typescript": "^3.6.3",
    "umzug": "^2.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,md}": [
      "prettier --write --config ./.prettierrc",
      "git add"
    ]
  }
}
