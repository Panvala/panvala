{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "parser": "babel-eslint",
  "extends": ["eslint:recommended"],
  "rules": {
    "semi": "error",
    "comma-dangle": "off",
    "no-console": "off",
    "keyword-spacing": "warn",
    "max-len": "warn",
    "key-spacing": "error",
    "prefer-const": "error",
    "space-before-function-paren": ["error", "never"],
    "space-before-blocks": ["warn", "always"],
    "arrow-spacing": "warn",
    "eqeqeq": ["error", "smart"],
    "no-constant-condition": "off",
    "curly": "error",
    "no-var": "warn",
    "object-shorthand": "warn",
    "no-restricted-globals": ["error", "event", "Promise", "name", "context"],
    "brace-style": "warn",
    "no-eq-null": "warn",
    "no-restricted-syntax": ["error", "ForOfStatement"],
    "quotes": ["warn", "single"]
  },
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "jquery": true
  }
}
